{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["./src", "./tests"],
  "typedocOptions": {
    "entryPointStrategy": "expand",
    "entryPoints": [
      "./src/ContainedVarProxyHandler.ts",
      "./src/Variable.ts",
      "./src/VariableContainer.ts"
    ],
    "excludePrivate": true,
    "out": "docs"
  }
}
